<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imageView_home_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main">
    
   <Button
       android:id="@+id/imageview_logo_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/piggy_bank_logo" />

    <ImageView
        android:id="@+id/imageView_logo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview_logo_home"
        android:layout_marginTop="10dp"
        android:src="@drawable/pms_title"/>
    
    
</RelativeLayout>
